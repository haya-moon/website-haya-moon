<!-- Header -->
<header>
    <div class="container">
        <div class="intro-text">
            <div class="intro-lead-in">Welcome</div>
            <div class="intro-heading"></div>
            <%= link_to "Hire Me", "#{root_path}#services", class: "page-scroll btn btn-xl" %>
        </div>
    </div>
</header>

<!-- Services Section -->
<section id="services">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Why hire me?</h2>
                <h3 class="section-subheading text-muted">Here's why I would be a great asset for your company</h3>
            </div>
        </div>
        <div class="row text-center">
            <div class="col-md-4">
                <h4 class="service-heading">Dedicated</h4>
                <p class="text-muted">Dedicated to providing and delivering high quality work for any project or work I am involved in. I always care about people and my work which drives me to be fully present in what I am involved in.</p>
            </div>
            <div class="col-md-4">

                <h4 class="service-heading">Passionate</h4>
                <p class="text-muted">Passion is what drives me everyday. I am always looking how to improve our environment and build a sustainable way of living.</p>
            </div>
            <div class="col-md-4">
                <h4 class="service-heading">Creative</h4>
                <p class="text-muted">My passion for music and art fuses with my way of thinking. I look for inspiration in anything I can find which gives space for an infinite amount of ideas that could arise.</p>
            </div>
        </div>
    </div>
</section>

  <section id="banner">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <hr width="100%" />
        </div>
      </div>
    </div>
  </section>

<!-- Carousel -->
<section id="card" class="card-section">
  <div class="container-carousel">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading-bottom">My work values</h2>
        <h3 class="section-subheading text-muted">Always looking for better ways to work in the most harmonised environment for everyone</h3>
      </div>
    </div>
    <div class="container text-center">
      <div class="row justify-content-center">
        <div class="col-sm-8 col-md-10 col-lg-12">
          <div id="carouselExampleCaptions" class="carousel slide w-100" data-bs-ride="carousel">
            <div class="carousel-indicators">
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="false" aria-label="Slide 1"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
              <div class="d-flex justify-content-center align-items-center">
                <h5>A holistic approach to web development</h5>
              </div>
              </div>
              <div class="carousel-item">
              <div class="d-flex justify-content-center align-items-center">
                <h5>Engaging with difficulties</h5>
              </div>              </div>
              <div class="carousel-item">
              <div class="d-flex justify-content-center align-items-center">
                <h5>Listening and learning from whatever arises</h5>
              </div>              </div>
            </div>
            <%= button_tag(type: "button", class: "carousel-control-prev", data: { bs_target: "#carouselExampleCaptions", bs_slide: "prev" }) do %>
              <%= content_tag(:span, nil, class: "carousel-control-prev-icon", aria: { hidden: true }) %>
              <span class="visually-hidden">Previous</span>
            <% end %>
            <%= button_tag(type: "button", class: "carousel-control-next", data: { bs_target: "#carouselExampleCaptions", bs_slide: "next" }) do %>
              <%= content_tag(:span, nil, class: "carousel-control-next-icon", aria: { hidden: true }) %>
              <span class="visually-hidden">Next</span>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<span style="height: 20px; width: 40px; min-height: 20px; min-width: 40px; position: absolute; opacity: 0.85; z-index: 8675309; display: none; cursor: pointer; background-image: url(data:image/png;base64,);"></span></body>


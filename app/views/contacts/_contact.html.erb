<!-- Contact -->
<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading-contact">Contact Me</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <div class="row justify-content-center">
          <div class="col-md-6 container-contact">
            <%= simple_form_for @contact, url: contacts_path, method: :post, html: { class: 'container' } do |form| %>
              <div class="form-group">
                <%= form.input :name, label: 'Name', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <%= form.input :email, label: 'Email', input_html: { class: 'form-control' } %>
              </div>
              <div class="form-group">
                <%= form.input :message, label: 'Message', as: :text, input_html: { class: 'form-control', rows: 5 } %>
              </div>
              <%= form.button :submit, 'Submit', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <%= value %>
      </div>
    <% end %>
  </div>
</section>
